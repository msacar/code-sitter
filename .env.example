# Code-Sitter Environment Configuration

# PostgreSQL Database URL (optional)
# If not set, will use JSON file storage
# DATABASE_URL=postgresql://user:password@localhost:5432/code_index

# Use PostgreSQL for storage (true/false)
USE_POSTGRES=false

# Embedding model (optional, defaults to all-MiniLM-L6-v2)
# EMBEDDING_MODEL=all-MiniLM-L6-v2

# Chunk size for code splitting (characters)
CHUNK_SIZE=1000

# Chunk overlap for context preservation
CHUNK_OVERLAP=200

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Watch mode polling interval (seconds)
WATCH_INTERVAL=2

# Maximum files to process in batch
BATCH_SIZE=100

# Vector dimension (depends on embedding model)
# all-MiniLM-L6-v2 = 384
# code-search-ada-002 = 1536
VECTOR_DIMENSION=384
